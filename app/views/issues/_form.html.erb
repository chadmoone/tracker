<%= form_for [@project, @issue] do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h4>
      <ul>
        <% @issue.errors.full_messages.each do |msg| %>
          <li class="error-text"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>

    <div class="control-group<%= @issue.errors.has_key?(:title) ? ' error' : ''  %>">
      <div class="controls">
        <%= f.label :title, nil, class: "control-label" %>
        <%= f.text_field :title %>
      </div>
    </div>
    
    <div class="control-group<%= @issue.errors.has_key?(:description) ? ' error' : ''  %>">
      <div class="controls">
        <%= f.label :description, nil, class: "control-label" %>
        <%= f.text_field :description %>
      </div>
    </div>
  
  <fieldset>

  <% if @issue.new_record? %>
    <%= link_to 'Cancel', @project, class: 'btn' %>
  <% else %>
    <%= link_to 'Cancel', @issue, class: 'btn' %>
  <% end %>
  
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>