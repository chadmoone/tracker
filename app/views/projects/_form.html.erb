<%= form_for @project do |f| %>

<% if @project.errors.any? %>
  <div id="error_explaination">
    <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li class="error-text"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <fieldset>

    <div class="control-group<%= @project.errors.has_key?(:name) ? ' error' : ''  %>">
      <div class="controls">
        <%= f.label :name, nil, class: "control-label" %>
        <%= f.text_field :name %>
      </div>
    </div>
    
    <%= f.label :description %>
    <%= f.text_field :description %>
  
  <fieldset>

  <% if @project.new_record? %>
    <%= link_to 'Cancel', projects_path, class: 'btn' %>
  <% else %>
    <%= link_to 'Cancel', @project, class: 'btn' %>
  <% end %>
  
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end -%>